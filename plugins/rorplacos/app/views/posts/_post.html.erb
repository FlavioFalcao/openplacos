<% user = post.user%>
<post>
  <header><h1><%= link_to post.title, post %></h1></header>
  <div class="figures">
  <figure class="image" ><img class="avatar" height="64" src="<%= get_avatar(user.email)%>" width="64"></figure>
  </div>
  <div class="content" itemprop="postBody">
    <%= raw(post.content) %>
  </div>
  <footer class="actions">by <%= link_to user.login , user %><%=" at #{post.created_at}  |  #{post.comments.length} Comments"%></footer>
</post>
