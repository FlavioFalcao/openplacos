<div class="sensor">
  <div class="name">
    <%=  link_to sensor.path,"/sensors#{sensor.path}" %>
  </div>
  <div class="value" id="<%=sensor.path%>">
    <%= sensor.value%>
  </div>
  <div class="regul">
    Regul : <%=  sensor.regul_status %>
  </div>
</div>

<script type="text/javascript"> 


  new Ajax.PeriodicalUpdater('<%=sensor.path%>', '<%="/sensors#{sensor.path}.json"%>', {
    method: 'get', frequency: 10, decay: 2
  });
  

</script>
