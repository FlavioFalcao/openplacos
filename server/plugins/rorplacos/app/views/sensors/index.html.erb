<% content_for :menu_left do %>
  <%room_path = @sensor.path.split("/")%>
  <%room_path.delete(room_path.last)%>
  <%= render :partial => "shared/menu_left", :locals => { :path => room_path.join("/") }%>
<% end %>
<%= render :partial => "abstract",:locals => { :sensor => @sensor }%>

<% if not @sensor.regul_status=="NA" %>
  <%= render :partial => "regulations/regul_form",:locals => { :path => @sensor.path }%>
<%end%>
<%= render :partial => "shared/graph",:locals => {:path => "/sensors/graph#{@sensor.path}"}%>




